{
  "name": "clean-architecture-solid",
  "version": "1.0.0",
  "description": "Clean Architecture and SOLID with NodeJs, Typescript, TDD.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "dev": "ts-node-dev --transpile-only --ignore-watch node_modules dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "rimraf dist && tsc -p tsconfig-build.json -w",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:staged": "npm test -- --findRelatedTests",
    "test:integration": "npm test -- -c jest-integration-config.js",
    "test:unit": "npm test -- -c jest-unit-config.js",
    "test:ci": "npm test -- --coverage",
    "lint:check": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts' 'tests/**/*.ts'",
    "style:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nelsonwenner/clean-tdd-ts-api.git"
  },
  "keywords": [
    "clean",
    "solid",
    "tdd",
    "typescript",
    "nodejs"
  ],
  "author": "Nelson Wenner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nelsonwenner/clean-tdd-ts-api/issues"
  },
  "homepage": "https://github.com/nelsonwenner/clean-tdd-ts-api#readme",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.15",
    "@types/mongodb": "^3.5.34",
    "@types/node": "^14.14.7",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^4.1.0",
    "eslint": "^7.13.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "sucrase": "^3.18.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "mongodb": "^3.6.3",
    "validator": "^13.1.17"
  },
  "engines": {
    "node": "12.x"
  }
}
