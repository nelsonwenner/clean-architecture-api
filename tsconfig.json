{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDirs": ["src"],
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "@data/*": ["data/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
      "@main/*": ["main/*"],
      "@presentation/*": ["presentation/*"],
      "@validation/*": ["validation/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": []
}
